# ===========================================
# G-Drive Frontend Environment Variables
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ===========================================

# Appwrite Connection
VITE_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=your-project-id

# Database
VITE_APPWRITE_DATABASE_ID=your-database-id

# ---- Collection IDs ----
VITE_COLLECTION_USERS=your-users-collection-id
VITE_COLLECTION_FOLDERS=your-folders-collection-id
VITE_COLLECTION_FILES=your-files-collection-id
VITE_COLLECTION_SHARES=your-shares-collection-id
VITE_COLLECTION_LINK_SHARES=your-link-shares-collection-id
VITE_COLLECTION_STARS=your-stars-collection-id
VITE_COLLECTION_ACTIVITIES=your-activities-collection-id
VITE_COLLECTION_PRESENCE=your-presence-collection-id

# Optional — only needed if tags feature is enabled
VITE_COLLECTION_TAGS=your-tags-collection-id
VITE_COLLECTION_RESOURCE_TAGS=your-resource-tags-collection-id

# ---- Storage Bucket ----
VITE_BUCKET_USER_FILES=your-user-files-bucket-id

# ---- Function IDs ----
VITE_FUNCTION_FOLDER_CRUD=your-folder-crud-function-id
VITE_FUNCTION_FILE_OPERATIONS=your-file-operations-function-id
VITE_FUNCTION_MANAGE_SHARES=your-manage-shares-function-id
VITE_FUNCTION_MANAGE_LINKS=your-manage-links-function-id
VITE_FUNCTION_SEARCH_FILES=your-search-files-function-id
VITE_FUNCTION_MANAGE_TRASH=your-manage-trash-function-id
VITE_FUNCTION_MANAGE_STARS=your-manage-stars-function-id

# Optional — only needed if tags feature is enabled
VITE_FUNCTION_MANAGE_TAGS=your-manage-tags-function-id

# ---- Optional: Email Notifications ----
# VITE_EMAIL_SERVICE_API_KEY=your-email-api-key
# VITE_SMTP_HOST=your-smtp-host
